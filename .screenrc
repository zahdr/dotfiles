# hide annoying startup message
startup_message off

# start screen with number 1 instead of 0
bind c screen 1
bind ^c screen 1
bind 0 select 10                                                            
screen 1

# formatting of hardstatus
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%? %= %{g}][%{B} %m-%d %{W}%c %{g}]'

# increase scrollback
defscrollback 50000
