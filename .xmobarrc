Config { font     = "Overpass Mono Bold 9"
       , bgColor  = "#5f5f5f"
       , fgColor  = "#f8f8f2"
       , position = TopW L 97
       , lowerOnStart = False
       , hideOnStart = False
       , allDesktops = True
       , overrideRedirect = False
       , pickBroadest = False
       , persistent = True
       , commands = [ Run Weather "EDHI"
                        [ "--template", "<skyCondition> <tempC>Â°C"
                        , "-L", "0"
                        , "-H", "25"
                        , "--low"   , "lightblue"
                        , "--normal", "#f8f8f2"
                        , "--high"  , "red"
                        ] 36000
                    , Run Mpris2 "spotify" 
                        ["-t", "<artist> - <title>"
                        ] 10
                    , Run Date "%a %Y-%m-%d <fc=#8be9fd>%H:%M</fc>" "date" 10
                    , Run XMonadLog
                    ]
       , sepChar  = "%"
       , alignSep = "}{"
       , template = "%XMonadLog% }{ %mpris2% | %EDHI% | %date% "
       }
